@page "/Ingreso"
@page "/Ingreso/{MensajeError}"
@attribute [AllowAnonymous]

<section class="vh-100" style="background-color: #B0D8F6;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="/css/Img/Login1.jpg"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form method="post" action="/autenticar">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                       
                                        <span class="h1 fw-bold mb-0">FARMACIA DEL AHORRO</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Para iniciar sesion coloca tus datos</h5>
                                    @if (MensajeError != null)
                                    {
                                        <div class="text-danger">@MensajeError</div>
                                    }

                                    <div class="form-outline mb-4">
                                        <input type="text" name="IdEmpleado" id="form2Example17" class="form-control form-control-lg" />
                                        <label class="form-label" for="Introduce tu Id">Id Empleado</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" name="Contrasena" id="form2Example27" class="form-control form-control-lg" />
                                        <label class="form-label" for="form2Example27">Contraseña</label>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-primary">Entrar</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@code {
    [Parameter] public string MensajeError { get; set; }
}
