@page "/Establecimiento/Editar/{RTN}"

<AuthorizeView Roles="Administrador">
    <Authorized Context="AuthenticationState">
          <h3>Editar Establecimiento</h3>

        <EditForm Model="@establecimiento">
            <DataAnnotationsValidator />

            <div class="row">
                <div class="col">
                    <label for="IdJefeEmpleado" class="col-sm-2 col-form-label">
                        Id Jefe Empleado
                    </label>
                    <div class="col-sm-10">
                        <InputText id="IdJefeEmpleado" class="form-control" @bind-Value="establecimiento.IdEmpleadoJefe" />
                        <ValidationMessage For="@(() => establecimiento.IdEmpleadoJefe)" />
                    </div>
                </div>
                <div class="col">
                    <label for="NombreJefe" class="col-sm-2 col-form-label">
                        Nombre del jefe
                    </label>
                    <div class="col-sm-10">
                        <InputText id="NombreJefe" class="form-control" @bind-Value="establecimiento.NombreJefe" />
                        <ValidationMessage For="@(() => establecimiento.NombreJefe)" />
                    </div>
                </div>
                <div class="col">
                    <label for="NombreEstablecimiento" class="col-sm-2 col-form-label">
                        Nombre del establecimiento
                    </label>
                    <div class="col-sm-10">
                        <InputText id="NombreEstablecimiento" class="form-control" @bind-Value="establecimiento.NombreEstablecimiento" />
                        <ValidationMessage For="@(() => establecimiento.NombreEstablecimiento)" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label for="Direccion" class="col-sm-2 col-form-label">
                        Direccion
                    </label>
                    <div class="col-sm-10">
                        <InputText id="Direccion" class="form-control" @bind-Value="establecimiento.Direccion" />
                        <ValidationMessage For="@(() => establecimiento.Direccion)" />
                    </div>
                </div>
                <div class="col">
                    <label for="Correo" class="col-sm-2 col-form-label">
                        Correo
                    </label>
                    <div class="col-sm-10">
                        <InputText id="Correo" class="form-control" @bind-Value="establecimiento.Correo" />
                        <ValidationMessage For="@(() => establecimiento.Correo)" />
                    </div>
                </div>
                <div class="col">
                    <label for="Telefono" class="col-sm-2 col-form-label">
                        Telefono
                    </label>
                    <div class="col-sm-10">
                        <InputText id="Telefono" class="form-control" @bind-Value="establecimiento.Telefono" />
                        <ValidationMessage For="@(() => establecimiento.Telefono)" />
                    </div>
                </div>
            </div>
            <div class="col-sm-10">
              <Br/>
            </div>
            <div class="form-group row">
                <p>
                    <input type="submit" class="btn btn-primary" value="Guardar" @onclick="Guardar" />
                    <input type="submit" class="btn btn-danger" value="Cancelar" @onclick="Cancelar" />
                </p>
            </div>
        </EditForm>

    </Authorized>

    <NotAuthorized>
        <h3>No tiene permisos para acceder a esta ruta</h3>
    </NotAuthorized>

</AuthorizeView>